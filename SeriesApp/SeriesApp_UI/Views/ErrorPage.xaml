<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SeriesApp_UI.Views.ErrorPage"
             Title="ErrorPage"
             BackgroundColor="{StaticResource clrDarkBlue}" Padding="10">
    <VerticalStackLayout>
        <!-- Título -->
        <Label Text="¡Error!" FontSize="60" HorizontalOptions="Center" Margin="0,15,0,0"/>

        <!-- Imagen -->
        <Image Source="ghost.png" MaximumWidthRequest="200" Margin="0,30"/>

        <!-- Mensaje de error -->
        <Label Text="{Binding ErrorMessage}"  MaxLines="10" LineBreakMode="WordWrap" Style="{StaticResource lblTitle}"/>        
    </VerticalStackLayout>
</ContentPage>