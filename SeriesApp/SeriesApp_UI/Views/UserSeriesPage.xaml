<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:VM="clr-namespace:SeriesApp_UI.ViewModels"
             x:Class="SeriesApp_UI.Views.UserSeriesPage"
             Title="UserSeriesPage">
    <VerticalStackLayout>
        <StackLayout Orientation="Horizontal">
            <SearchBar />
            <Button Text="Refresh" Command="{Binding RefreshCommand}"/>
        </StackLayout>

        <ScrollView Orientation="Horizontal">
            <ListView ItemsSource="{Binding Series}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout MaximumHeightRequest="100" Padding="10" BackgroundColor="{StaticResource clrDarkBlue}" Margin="0,0,2,0">
                            <Image Source="{Binding ImageUrl}" MaximumHeightRequest="200"/>
                            <Label Text="{Binding Name}" FontSize="Subtitle" Margin="0, 10, 0, 0" TextColor="White"/>
                        </StackLayout>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>