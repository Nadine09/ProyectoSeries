        </Grid.RowDefinitions>
        <Image Source="{Binding ImageUrl}" Grid.Row="0" MaximumHeightRequest="200" MinimumHeightRequest="150"/>
        <Label Text="{Binding Name}" Grid.Row="1" FontSize="Subtitle" Margin="0, 10, 0, 0" TextColor="White"/>
    </Grid>
