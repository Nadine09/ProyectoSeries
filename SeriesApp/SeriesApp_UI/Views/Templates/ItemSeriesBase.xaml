        <Image Source="{Binding ImageUrl}" MaximumHeightRequest="200" MinimumHeightRequest="150"/>
        <Label Text="{Binding Name}" FontSize="Subtitle" Margin="0, 10, 0, 0" TextColor="White"/>
    </StackLayout>-->
    <Grid Padding="10" BackgroundColor="{StaticResource clrDarkBlue}" Margin="0,0,2,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
