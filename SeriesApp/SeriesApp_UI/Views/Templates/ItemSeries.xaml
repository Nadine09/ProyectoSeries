<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SeriesApp_UI.ViewModels"
             xmlns:en="clr-namespace:SeriesApp_Entities.Classes;assembly=SeriesApp_Entities"
             x:Class="SeriesApp_UI.Views.Templates.ItemSeries">
    <Border BackgroundColor="{StaticResource clrDarkBlue}" Stroke="{StaticResource clrDarkBlue}" StrokeThickness="0" Margin="0,1">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="5"/>
        </Border.StrokeShape>
        <HorizontalStackLayout x:DataType="en:ClsSeries" Padding="10" MaximumHeightRequest="150">
            <Image Source="{Binding ImageUrl}"/>
            <Label Text="{Binding Name}" Style="{StaticResource Key=lblBigSeriesName}"/>
            <Button Text="+" Command="{Binding Source={RelativeSource AncestorType={x:Type vm:VM_Search}}, Path=AddSerieCommand}" CommandParameter="{Binding .}"/>
        </HorizontalStackLayout>
    </Border>
</ContentView>
