<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:VM="clr-namespace:SeriesApp_UI.ViewModels"
             x:DataType="VM:VM_Login"
             x:Class="SeriesApp_UI.Views.LoginPage"
             Title="LoginPage"
             BackgroundColor="{StaticResource clrDarkBlue}">
    <VerticalStackLayout BackgroundColor="White">
        <!--<Label 
            Text="{Binding Valor}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry
            Text="{Binding Number}"/>
        <Label Text="{Binding Number}"/>-->

        
        <Entry Placeholder="Email" Text="{Binding Email}"/>
        <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}" />
        <Label Text="{Binding ErrorMessage}" TextColor="Red"/>
        <Button Text="Log in" Style="{StaticResource stlBtnLogin}" Command="{Binding LoginCommand}"/>
        <Line BackgroundColor="White"/>
        <Button Text="Create Account" Style="{StaticResource stlBtnLogin}" Command="{Binding CreateAccountCommand}"/>
    </VerticalStackLayout>
</ContentPage>